<%= form_with(model: tarefa, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :due_date, style: "display: block" %>
    <%= form.date_field :due_date %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :done, class: 'form-check-input' %>
    <%= form.label :done, class: 'form-check-label' %>
  </div>

  <%= form.submit class: 'btn btn-primary', data: { "disable-with-value": 'Salvando...' } %>

  <%= link_to 'Cancelar', tarefas_path, class: 'btn btn-light' %>
<% end %>